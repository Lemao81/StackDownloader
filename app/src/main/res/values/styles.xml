<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="text_emphasized">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_normal">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="text_score">
        <item name="android:textSize">@dimen/text_size_score</item>
        <item name="android:textColor">@color/stackoverflow_dark_grey</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="text_score_label">
        <item name="android:textSize">@dimen/text_size_score_label</item>
        <item name="android:textColor">@color/stackoverflow_dark_grey</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="text_question_title">
        <item name="android:textSize">@dimen/text_size_question_title</item>
        <item name="android:textColor">@color/stackoverflow_blue</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="text_question_title_extended">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_creation_date">
        <item name="android:textSize">@dimen/text_size_creation_date</item>
        <item name="android:textColor">@color/stackoverflow_light_grey</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="text_owner">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/stackoverflow_blue</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>

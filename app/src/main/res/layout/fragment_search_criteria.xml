<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="com.jueggs.stackdownloader.ui.search.viewmodel.SearchCriteriaBindingViewModel" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusableInTouchMode="true"
        android:padding="8dp"
        tools:context=".ui.search.view.SearchCriteriaFragment">

        <android.support.constraint.Guideline
            android:id="@+id/guidLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.4" />

        <android.support.constraint.Guideline
            android:id="@+id/guidRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.6" />

        <TextView
            android:id="@+id/lblSearchCriteria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search criteria"
            android:textAppearance="@style/text_emphasized"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/inputFrom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintRight_toLeftOf="@+id/guidLeft"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lblSearchCriteria">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/edtFrom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="from"
                android:inputType="date" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/inputTo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/guidRight"
            app:layout_constraintTop_toTopOf="@+id/inputFrom">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/edtTo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="to"
                android:inputType="date" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/inputLimitTo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintRight_toLeftOf="@+id/guidLeft"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnLastWeek">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/edtLimitTo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="limit to"
                android:inputType="numberSigned"
                android:text="@{model.limitTo}" />
        </android.support.design.widget.TextInputLayout>

        <AutoCompleteTextView
            android:id="@+id/autoTxtTags"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:hint="tag"
            android:text="@{model.tag}"
            app:layout_constraintEnd_toStartOf="@+id/fabAddTag"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/inputLimitTo" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabAddTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:onClick="@{() -> model.onAddTag()}"
            app:layout_constraintBottom_toBottomOf="@+id/autoTxtTags"
            app:layout_constraintRight_toLeftOf="@+id/guidLeft"
            app:layout_constraintTop_toTopOf="@+id/autoTxtTags"
            app:srcCompat="@drawable/ic_plus_circle_outline_white_24dp" />

        <LinearLayout
            android:id="@+id/linTagContainer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@+id/autoTxtTags"
            app:layout_constraintLeft_toRightOf="@+id/guidLeft"
            app:layout_constraintTop_toTopOf="@+id/autoTxtTags">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="kotlin" />
        </LinearLayout>


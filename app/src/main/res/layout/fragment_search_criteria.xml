<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:padding="8dp"
    tools:context=".fragments.SearchCriteriaFragment">

    <android.support.constraint.Guideline
        android:id="@+id/guidHalf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <TextView
        android:id="@+id/lblSearchCriteria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search criterias"
        android:textAppearance="@style/text_emphasized"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/inputLimitTo"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputScore">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/edtLimitTo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Limit to..." />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/inputScore"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblSearchCriteria">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/edtScore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Min score..."
            android:inputType="numberSigned" />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/lglTags"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:text="Tags"
        android:textAppearance="@style/text_emphasized"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputLimitTo" />

    <AutoCompleteTextView
        android:id="@+id/edtTags"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:hint="Add tag..."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lglTags" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabAddTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_weight="1"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="@+id/edtTags"
        app:layout_constraintLeft_toRightOf="@+id/edtTags"
        app:layout_constraintTop_toTopOf="@+id/edtTags"
        app:srcCompat="@drawable/ic_plus_circle_outline_white_24dp" />

    <LinearLayout
        android:id="@+id/linTagContainer"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lglTags">

    </LinearLayout>

    <TextView
        android:id="@+id/lblOrderBy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Order by"
        android:textAppearance="@style/text_emphasized"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtTags" />

    <Spinner
        android:id="@+id/spnOrderBy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblOrderBy" />

    <TextView
        android:id="@+id/lblSortBy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Sort by"
        android:textAppearance="@style/text_emphasized"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spnOrderBy" />

    <ImageButton
        android:id="@+id/ibtnSearch"
        android:layout_width="80dp"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:background="@color/accent"
        android:elevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_search_white_24dp" />

    <Spinner
        android:id="@+id/spnSortBy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblSortBy" />
</android.support.constraint.ConstraintLayout>